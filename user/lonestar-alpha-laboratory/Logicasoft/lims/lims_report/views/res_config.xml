<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">General Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="lims_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div data-key="lims_base" position="inside">
                <h2>lims report</h2>
                <div class="row mt16 o_settings_container" name="lims_report_config">
                    <group col="1">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ask_password_lims_analysis_report_do_validated"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ask_password_lims_analysis_report_do_validated"/>
                                <div class="text-muted">
                                    When validate a report, user need to enter his password
                                </div>
                            </div>
                        </div>
                    </group>
                </div>
            </div>
        </field>
    </record>
</odoo>
