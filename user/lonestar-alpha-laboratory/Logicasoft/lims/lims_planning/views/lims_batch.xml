<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="lims_batch_form_view">
        <field name="name">Batch</field>
        <field name="model">lims.batch</field>
        <field name="inherit_id" ref="lims_base.lims_batch_form_view"/>
