<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">General Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="lims_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div data-key="lims_base" position="inside">
                <h2>LIMS sale</h2>
                <div class="row mt16 o_settings_container" name="lims_sale_config">
                    <group col="2">
                        <div class="col-12 col-lg-6 o_setting_box" colspan="2">
                            <div class="o_setting_left_pane">
                                <field name="additional_pack_invoiced"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="additional_pack_invoiced"/>
                                <div class="text-muted">
                                    <p>Allows parameter packs to be invoiced without generating the results in the analysis.</p>
                                    <p>An additional configuration is present in the parameter pack.</p>
                                </div>
                            </div>
                        </div>
                    </group>
                </div>
            </div>
        </field>
    </record>
</odoo>
