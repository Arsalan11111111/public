<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="lims_quality_alert_view_form">
        <field name="name">Lims quality check view form</field>
        <field name="inherit_id" ref="lims_quality_control.lims_quality_alert_view_form"/>
        <field name="model">quality.check</field>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_analysis_with_finished_lot" string="Create Analysis with finished lot" class="oe_highlight"
                        type="object" attrs="{'invisible': [('rel_point_id_create_analysis', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
