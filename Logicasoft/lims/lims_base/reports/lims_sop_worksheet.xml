<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="lims_sop_worksheet">
        <t t-call="web.html_container">
            <t t-set="analysis_ids" t-value="doc_ids.mapped('analysis_id')"/>

            <t t-foreach="analysis_ids" t-as="analysis_id">
                <t t-set="company" t-value="analysis_id.laboratory_id.company_id"/>
                <t t-call="lims_base.lims_internal_layout">
                    <style>
                        thead tr{
                        border: 1px solid;
                        }

                        tbody td{
                        border: 1px solid;
                        text-align: center;
                        }
                    </style>

                    <div class="page">
                        <div class="row">
                            <div class="col">
                                <span><b>Worksheet</b></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <span>Request NÂ° : <t t-esc="analysis_id.request_id.name"/></span>
                            </div>
                            <div class="col-6">
                                <span>Customer :<t t-esc="analysis_id.partner_id.name"/></span>
                            </div>
                        </div>

                        <table style="width: 100%">
                            <t t-foreach="analysis_id.sop_ids" t-as="sop_id">
                                <thead>
                                    <tr>
                                        <th colspan="4">
                                            <div class="row">
                                                <div class="col-4">
                                                    Sample ID : <t t-esc="analysis_id.name"/>
                                                </div>
                                                <div class="col-4">
                                                    Test : <t t-esc="sop_id.name"/>
                                                </div>
                                                <div class="col-4">
                                                    Method : <t t-esc="sop_id.method_id.name"/>
                                                </div>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>Parameter</td>
                                        <td>Result</td>
                                        <td>Unit</td>
                                    </tr>

                                    <t t-foreach="sop_id.result_num_ids" t-as="result" name="result_tr">
                                        <tr>
                                            <td>
                                                <t t-esc="result.method_param_charac_id.tech_name"/>
                                            </td>
                                            <td>

                                            </td>
                                            <td>
                                                <t t-esc="result.uom_id.name"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-foreach="sop_id.result_sel_ids" t-as="result" name="result_sel_tr">
                                        <tr>
                                            <td>
                                                <t t-esc="result.method_param_charac_id.tech_name"/>
                                            </td>
                                            <td>

                                            </td>
                                            <td>
                                                <t t-esc="result.uom_id.name"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </t>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="lims_sop_worksheet_report" model="ir.actions.report">
        <field name="name">WorkSheet</field>
        <field name="model">lims.sop</field>
        <field name="print_report_name">'ws_' + object.name</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">lims_base.lims_sop_worksheet</field>
        <field name="binding_model_id" ref="lims_base.model_lims_sop"/>
    </record>

</odoo>
