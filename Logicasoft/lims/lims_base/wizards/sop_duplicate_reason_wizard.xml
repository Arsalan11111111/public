<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sop_duplicate_reason_wizard_form" model="ir.ui.view">
        <field name="name">Sop Duplicate Reason Wizard</field>
        <field name="model">sop.duplicate.reason.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sop_id" invisible="1"/>
                        <field name="reason" required="1"/>
                    </group>
                </sheet>

                <footer>
                    <button name="do_confirm" string="Confirm" type="object"/>
                    <button string="Cancel" name="cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
