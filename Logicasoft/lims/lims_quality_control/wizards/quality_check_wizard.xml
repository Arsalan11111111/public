<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_quality_check_wizard" model="ir.ui.view">
        <field name="name">quality_check_wizard</field>
        <field name="model">quality.check.wizard</field>
        <field name="inherit_id" ref="quality_control.view_quality_check_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='do_fail']" position="after">
                <field name="rel_create_analysis" invisible="1"/>
                <field name="stock_picking_id" invisible="1"/>
                <field name="rel_code" invisible="1"/>
                <button name="create_analysis" string="Create Analysis" class="oe_highlight" type="object" attrs="{'invisible': ['|', ('rel_create_analysis', '=', False), ('rel_code', '!=', 'mrp_operation')]}"/>
                <button name="create_analysis_from_stock_move" string="Create Analysis from stock" class="oe_highlight" type="object" attrs="{'invisible': ['|', ('rel_create_analysis', '=', False), ('rel_code', '=', 'mrp_operation')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
