<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="wizard_confirmation_report_request_form">
        <field name="name">Confirmation</field>
        <field name="model">confirmation.create.report.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        An analysis report already exists, do you want to proceed ?
                    </div>
                </sheet>
                <footer>
                    <button string="Create Report" name="do_create" type="object" class="oe_highlight"/>
                    <button string="See existing reports" name="open_analysis_report" type="object"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
