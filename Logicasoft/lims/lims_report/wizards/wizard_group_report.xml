<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="wizard_group_report_form">
        <field name="name">Group</field>
        <field name="model">wizard.group.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="group_by_customer"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Create Report" name="do_create" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
