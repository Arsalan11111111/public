<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="lims_batch_worksheet_parameters_parser" inherit_id="lims_base.lims_batch_worksheet_parameters_parser">
        <xpath expr="//tbody//tr[1]//td[2]" position="after">
            <td>Criteria</td>
        </xpath>

        <xpath expr="//t[@name='result_tr']//tr[1]//td[2]" position="after">
            <td>
                <t t-esc="result.report_limit_value"/>
            </td>
        </xpath>

        <xpath expr="//t[@name='result_sel_tr']//tr[1]//td[2]" position="after">
            <td>
                <t t-esc="result.report_limit_value"/>
            </td>
        </xpath>
    </template>
</odoo>
